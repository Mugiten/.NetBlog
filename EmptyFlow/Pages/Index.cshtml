@page
@model EmptyFlow.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
@{ 
    var items = Model.BlogPost.OrderByDescending(p=>p.PostDate);
}
@foreach (var item in items) {
    <div class="expand">
        <div class="blog-post">
            <h2 class="blog-post-title">@Html.DisplayFor(modelItem => item.Title)</h2>
            <p class="blog-post-meta"> @Html.DisplayFor(modelItem => item.PostDate) by  @Html.DisplayFor(modelItem => item.Author)</p>
            <p>@Html.DisplayFor(modelItem => item.Post)</p>
        </div>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a> |
            <a asp-page="./Post" asp-route-id="@item.ID">Read More</a>
        </td>
    </div>
}
<a href="#" id="loadMore">Load More</a>



